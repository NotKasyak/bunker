{
  "install": "npm install && cd client && npm install && cd ../server && npm install",
  "start": "node server/index.js",
  "watch": {
    "install": {
      "include": [
        "^package\\.json$",
        "^client/package\\.json$",
        "^server/package\\.json$"
      ]
    },
    "restart": {
      "include": [
        "^server/"
      ]
    },
    "throttle": 1000
  }
}
